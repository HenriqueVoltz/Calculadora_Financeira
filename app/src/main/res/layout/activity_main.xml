<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#E65656"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7FABEB"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSimples"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7FABEB"
                android:backgroundTint="#7FABEB"
                android:onClick="buttonSimples"
                android:text="A"
                app:toggleCheckedStateOnClick="true" />

            <Button
                android:id="@+id/buttonComposto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7FABEB"
                android:backgroundTint="#7FABEB"
                android:backgroundTintMode="add"
                android:baselineAligned="false"
                android:onClick="buttonComposto"
                android:text="B"
                app:toggleCheckedStateOnClick="true" />

            <Button
                android:id="@+id/buttonSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7FABEB"
                android:backgroundTint="#7FABEB"
                android:onClick="buttonSite"
                android:text="⚖️"
                app:toggleCheckedStateOnClick="true" />

            <Button
                android:id="@+id/buttonFuturo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7FABEB"
                android:backgroundTint="#7FABEB"
                android:baselineAligned="false"
                android:onClick="buttonFuturo"
                android:text="C"
                app:toggleCheckedStateOnClick="true" />

            <Button
                android:id="@+id/buttonParcela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7FABEB"
                android:backgroundTint="#7FABEB"
                android:onClick="buttonParcela"
                android:text="D" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>